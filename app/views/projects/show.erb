<h1><%= @project.name %></h1>
<% if @project.user_id == session[:id] %><a href="/projects/<%= @project.slug %>/edit">Edit Project</a><% end %>

<% if @tasks.count > 0 %><h2>Tasks:</h2><% end %>

<ul>
  <% @tasks.each do |task| %>
    <li><p><a href="/tasks/<%= task.id %>"><%= '<strike>' if task.status == 'Completed' %><%= task.description %></a><%= '</strike>' if task.status == 'Completed' %><br /><% if task.user_id != session[:id] %>Assigned to: <%= User.find(task.user_id).name %><% end %></p></li>
  <% end %>
</ul>

<a href="/tasks/new">Add Task</a>