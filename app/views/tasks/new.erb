<h1>New Task</h1>

<form action="/tasks" method="post">
<input type="hidden" name="task[user_id]" value="<%= session[:id] %>">
<p><label for="task[description]">Description: </label><input type="text" name="task[description]" id="task_description"></p>
<p><select name="task[project_id]" id="project_id">
  <% @projects.each do |project| %>
    <option value="<%= project.id %>"><%= project.name %></option>
  <% end %>
  </select></p>
<p><select name="task[status]" id="task_status">
  <option value="In Progress">In Progress</option>
  <option value="Completed">Completed</option>
</select></p>
<p><input type="submit" value="Add Task"></p>
</form>